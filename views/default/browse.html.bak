{{left_sidebar_enabled,right_sidebar_enabled=False,True}}
{{extend 'layout.html'}}
<h1>This Page is for Browsing Comics</h1>
<p>
    This page will eventually show a list of comments with checkboxes. If the user clicks a checkbox, javascript will run to subscribe or unsubscribe the user from the corresponding comic. Comic names will be listed as links to the first page of each comic in case the user wants to see what a given comic is before subscribing.
</p>

{{block right_sidebar}}
<h6>{{=T("Navigation Sidebar (not fully populated)")}}</h6>
<ul>
  <li>{{=A(T('Browse comics'), _href=URL('browse'))}}</li>
  <li>{{=A(T('Check Updates'), _href=URL('updates'))}}</li>
  <li>{{=A(T('List Subscriptions'), _href=URL('subscriptions'))}}</li>
</ul>
{{end}}
